<?xml version="1.0" encoding="UTF-8"?>

<!-- http://www.phpunit.de/manual/current/en/appendixes.configuration.html -->
<phpunit
        backupGlobals               = "false"
        backupStaticAttributes      = "false"
        colors                      = "true"
        convertErrorsToExceptions   = "true"
        convertNoticesToExceptions  = "true"
        convertWarningsToExceptions = "true"
        processIsolation            = "false"
        stopOnFailure               = "false"
        syntaxCheck                 = "false"
        bootstrap                   = "../../bootstrap.php" >

    <php>
        <env name="BROWSER" value="firefox_vanilla"/>
        <env name="QUIT" value="1" />
    </php>

    <testsuites>
        <testsuite>
            <file>./base/ConfigTest.php</file>
            <file>./base/LoginTest.php</file>
            <file>./base/RegisterTest.php</file>
            <file>./base/SetupTest.php</file>
        </testsuite>
    </testsuites>

    <logging>
        <log type="junit" target="../../reports/AN/junit.xml" logIncompleteSkipped="false"/>
    </logging>

</phpunit>
